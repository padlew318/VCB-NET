<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <meta name="description" content="The description of my page" />
</head>
<body>
    <!-- Topper -->
    <div class="topper">
        <div class="container">
            <div class="logotxt">
                <h1><i class="fa fa-desktop"></i> Virtual Communications Board </h1>
            </div>
            <div class='header_options'>
                <i class='fa fa-user'></i> Paddy
                &nbsp;|&nbsp;
                <a href='mailto:paddy@b4tech.co.uk?subject=Virtual Management Board&body=please provide a screenshot%0D%0A%0D%0A' rel='tooltip' title='Send us a comment or suggestion'>
                    <i class='fa fa-pencil'></i> Leave Feedback
                </a>
                &nbsp;|&nbsp;
                <a href='logOut.php' rel='tooltip' title='Go back to the login screen'><i class='fa fa-remove'></i> Logout</a>
            </div>
        </div>
    </div>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("VCB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer>
        <div class="footer">
            <div class="container">
                <div class="row  text-center">
                    <div class="col-lg-12">
                        <p>
                            <i class="fa fa-desktop"></i> Virtual Communications Board -
                            version number<a href="version_change_log.php"><i class="icon-info-sign"></i></a>
                            <br>
                            &copy; @DateTime.Now.Year
                            &nbsp; | &nbsp; Developer <a href='../developer/index.php'><i class='fa fa-wrench'></i></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>